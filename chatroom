#!/bin/env bash

firstexec=0

function group_init() {

	socat - UDP4-DATAGRAM:255.255.255.255:51423,broadcast,bind=:51423  | while read line; do

			if [[ $firstexec == 0 ]];then
				clear 
				echo "Welcome to Knock Knock chatroom"
				echo "press ctrl+c to start type your message"
				firstexec=1
			fi
	    echo "[$USERNAME@$HOSTNAME] $line"
	done
}

group_init

