#!/bin/env bash


function group_init() {

	firstexec=0

	if [[ $firstexec == 0 ]];then
		clear 
		echo "Welcome to Knock Knoc chatroom"
		echo "press ctrl+c to start type your message"
		firstexec=1
	fi

	socat - UDP4-DATAGRAM:255.255.255.255:51423,broadcast,bind=:51423 

	read -p "mesagge : " messagetext
	echo "$USER@$HOSTNAME $messagetext" | socat - UDP4-DATAGRAM:255.255.255.255:51423,broadcast,bind=:51423
	group_init
}

group_init

