#!/bin/env bash


clear
firstexec=1
echo "Welcome to blackcat chatroom"
read -p "insert yout servername: " servername

function group_init() {
	
	user=$USER

	socat - UDP4-DATAGRAM:255.255.255.255:51423,broadcast,bind=:51423  | while read -r line; do
		echo "[$(echo $USER)@$(echo $HOSTNAME)] $line" 
	done
}

group_init
